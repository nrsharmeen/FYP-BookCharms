<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEDAF1"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- FAQ content goes here -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Each FAQ item is a TextView -->
            <TextView
                android:id="@+id/faq_question1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Question 1"
                android:textColor="#6C002B"
                android:layout_marginTop="30dp"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/faq_answer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Answer 1"
                android:textColor="#6C002B"
                android:textSize="18sp"
                android:padding="16dp"/>

            <TextView
                android:id="@+id/faq_question2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Question 2"
                android:textSize="20sp"
                android:textColor="#6C002B"
                android:textStyle="bold"
                android:padding="16dp"/>

            <TextView
                android:id="@+id/faq_answer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Answer 2"
                android:textColor="#6C002B"
                android:textSize="18sp"
                android:padding="16dp"/>

            <TextView
                android:id="@+id/faq_question3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Question 3"
                android:textSize="20sp"
                android:textColor="#6C002B"
                android:textStyle="bold"
                android:padding="16dp"/>

            <TextView
                android:id="@+id/faq_answer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Answer 3"
                android:textColor="#6C002B"
                android:textSize="18sp"
                android:padding="16dp"/>

            <TextView
                android:id="@+id/faq_question4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Question 4"
                android:textSize="20sp"
                android:textColor="#6C002B"
                android:textStyle="bold"
                android:padding="16dp"/>

            <TextView
                android:id="@+id/faq_answer4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Answer 4"
                android:textSize="18sp"
                android:textColor="#6C002B"
                android:padding="16dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
